<section>
  <div class="row">
    <div class="large 8 columns">
        <%- if controller_name != 'users_sessions' && controller_name != 'admin_users_sessions' && controller.request.format.html? %>
          <%= link_to t('devise.login'), new_session_path(resource_name), remote: true %><br />
        <% end -%>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to t('devise.registrations.sign_up'), new_registration_path(resource_name), remote: true %><br />
        <% end -%>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to t('devise.passwords.forgotten'), new_password_path(resource_name), remote: true %><br />
        <% end -%>

        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to t('devise.confirmations.no_confirmation'), new_confirmation_path(resource_name), remote: true %><br />
        <% end -%>

        <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          <%= link_to t('devise.failure.locked_link.no_mail'), new_unlock_path(resource_name), remote: true %><br />
        <% end -%>

        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to t('devise.login_with') + " #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
          <% end -%>
        <% end -%>
    </div>
  </div>
</section>