<section class="row forms">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'forms', method: :post }, remote: true) do |f| %>
      <div id="js-message" class="forms large-8 large-centered columns"></div>
    <fieldset>
      <legend><%= t('devise.passwords.forgotte_password') %></legend>

      <div class="row">
        <div class="large-12 columns">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <%= f.submit t('devise.passwords.reset'), class: 'small button' %>
        </div>
      </div>
    </fieldset>
<% end %>

<%= render 'devise/shared/links' %>
</section>

