<%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
    <div id="js-message" class="forms large-8 large-centered columns"></div>
    <fieldset>
      <legend><%= t('devise.login') %></legend>

      <div class="row">
        <div class="large-12 columns">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: 'off' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="row">
            <div class="large-12 columns">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
      <% end -%>

      <div class="row">
        <div class="large-12 columns">
          <%= f.submit t('devise.login'), class: 'small button' %>
        </div>
      </div>
    </fieldset>
<% end %>

<%= render 'devise/shared/links' %>